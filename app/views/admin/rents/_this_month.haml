.panel
  %h3 Unpaid
  .panel_content
    %table
      %tbody
        %tr
          - if @rents_unpaid_this_month.any?
            %th Address
            %th Amount Due
            %th 
            - for rent in @rents_unpaid_this_month
              %tr
                %td= rent.formatted_address
                %td= number_to_currency rent.amount_due
                %td= button_to "Receive Payment", receive_admin_rent_path(rent, applicable_period: 'this month'), method: :put
          - else
            %th All paid this month!

  %h3 Paid
  .panel_content
    %table
      %tbody
        %tr
          %th Received
          %th From
          %th Collected On
        - for rent in @rents_paid_this_month
          %tr
            %td= link_to(number_to_currency(rent.amount_due), admin_rent_path(rent))
            %td= rent.formatted_address
            %td= rent.collected_at.to_s(:event_datetime)
